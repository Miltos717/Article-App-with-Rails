<h1 class="text-center mt-4">App Users</h1>

<div id="page-content">

  <% @users.each do |user| %>
    <div class="container">
      <div class="card text-center img-fluid rounded-4 shadow-2-strong">
        <div class="card-header"><%= link_to user.username,user%></div>
        <div class="card-body">
          <h5 class="card-title"><%= link_to "image",user %></h5>
          <p class="card-text"><%= pluralize(user.articles.count,"article") %></p>
          <%= link_to "View profile", user,class:"btn btn-outline-success" %>
          <% if logged_in? %>
              <% if user == current_users %>
                  <%= link_to "Edit profile", edit_user_path(user),class:"btn btn-outline-info" %>
               <% end %>
                <% if current_users.admin? %>
                     <%= button_to "Delete user", user_path(user),class:"btn btn-outline-danger",method: :delete, data: { confirm: "Are you sure for this user??" } %>
                <% end %>
            <% end %>
            </div>
        <div class="card-footer text-muted">
          <small>Joined<%= time_ago_in_words(user.created_at) %>ago </small>
        </div>
      </div>
    </div>

  <%end %>
</div    >



