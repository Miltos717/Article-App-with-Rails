<%= form_with(model: article) do |form| %>
  <div class="container">
    <form id="info">
      <%= render "shared/errors" %>
      <!-- Name input -->
      <div class="form-outline mb-4">
        <label class="form-label" for="form4Example1">Title</label>
        <%= form.text_field :title, placeholder: "Title of article", class: "form-control" %>
      </div>


        <div class="form-outline mb-4">
          <label class="form-label" for="form4Example3">Description</label>
          <%= form.text_area :description, placeholder: "Description", class: "form-control" %>
        </div>

        <div class="form group row justify-content-center">
          <p><%= form.button :submit, class:"btn btn-success btn-block mb-4", params:{article:{active: true}} %> </p>
        </div>

    </form>
    <%= link_to "Cancel and return to articles listing ", articles_path, class:"text-info"%>
  </div>

<% end %>

